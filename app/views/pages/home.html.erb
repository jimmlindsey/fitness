<div class="container">
  <div class="row">
    <div>
      <center>
        <h1><span class="text-blue">Evergym</span> Train wherever you want.</h1>  
      </center>
    </div>
  </div>
  
  <br><br><br>
  
  <%= form_tag search_path, method: :get do %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= text_field_tag :search, params[:search], placeholder: "Where do you want to train?", class: "form-control", id: "autolocation" %>
      </div>
    </div>
    <br/><br/>

    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <%= submit_tag "Search", class: "btn btn-new btn-block" %>
      </div>
    </div>
  <% end %>

  <br/><hr/><br/>

  <!-- Gyms -->
  <div><h2>Gyms</h2></div>
    <div class="row">
      <br>
      <% @rooms.each do |room| %>
        <div class="col-md-3">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag room.cover_photo(:medium) %>
            </div>
            <div class="panel-body">
              <%= link_to room.listing_name, room %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
       
  <br/>

  <div class="row">
  </div> 

  <!-- CITIES -->
  <div><h2>Cities</h2></div>
  <div class="row">
    <br>
    <div class="col-md-3 col-sm-12">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=los+angeles">
        <div class="discovery-card" style="background-image: url('/assets/LA.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-12">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=london">
        <div class="discovery-card" style="background-image: url('/assets/LD.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-12">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=paris">
        <div class="discovery-card" style="background-image: url('/assets/PR.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-12">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=miami">
        <div class="discovery-card" style="background-image: url('/assets/MI.jpg')"></div>
      </a>
    </div>
  </div>
</div>

