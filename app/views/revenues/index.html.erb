<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="container">
        <br>
          <label>This Week's Revenues</label>
          <div class="panel-body">
            <div class="container text-center">
              <% if @reservations.blank? %>
                  <h3>You don't have any reservations</h3><br/>
                  <%= link_to "Become a Host to earn income", new_room_path, class: "btn btn-normal" %>
              <% else %>
                  <%= column_chart @this_week_revenue, colors: ["#34a853"] %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>