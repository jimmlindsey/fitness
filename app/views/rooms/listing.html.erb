<div class="container pt-4 pb-5">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <div class="card d-md-block d-lg-block mb-4">
        <div class="card-body">
          <%= render 'room_menu' %>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card d-md-block d-lg-block mb-4">
        <div class="card-body">
          <div class="container">
            <%= form_for @room do |f| %>

              <div class="row">
                <div class="col-md-4 select">
                  <div class="form-group">
                    <label>Gym Type</label>
                    <%= f.select :room_type, [["Fitness Center", "Fitness Center"], ["Crossfit Gym", "Crossfit Gym"], ["Studio", "Studio"], ["Sports Training", "Sports Training"]],
                                  id: "room_type", prompt: "Select...", class: "form-control" %>
                  </div>
                </div>
                
                <div class="col-md-4 select">
                  <div class="form-group">
                    <label>Booking Type</label>
                    <%= f.select :instant, Room.instants.map {|key,value| [key.humanize, key]}, prompt: "Select...", class: "form-control" %>
                  </div>
                </div>
              
              </div>
              <div><%= f.submit "Save", class: "btn btn-new" %></div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>



