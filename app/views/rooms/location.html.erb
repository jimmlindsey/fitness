<div class="container pt-4 pb-5">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <div class="card d-md-block d-lg-block mb-4">
        <div class="card-body">
          <div class="container">
            <%= render 'room_menu' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card d-md-block d-lg-block mb-4">
        <div class="card-body">
          <div class="container">
            <%= form_for @room do |f| %>

              <div class="row">
                <div class="form-group">
                  <label>Location</label>
                  <%= f.text_field :address, placeholder: "What is your address?", class: "form-control", required: true, id: "autoaddress" %>
                </div>
              </div>

              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-new" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>





