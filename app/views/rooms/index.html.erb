<% if @rooms.count > 0 %>
<div class="container pt-4 pb-5">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <div class="card d-md-block d-lg-block mb-4">
        <div class="card-body">
          <div class="container">
            <ul class="sidebar">
              <li><%= link_to "Your Listings", rooms_path, class: "sidebar-link active" %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card d-md-block d-lg-block mb-4">
        <div class="card-body">
          <div class="container">
            <label>Listings</label>
            <% @rooms.each do |room| %>
              <div class="row">
                <div class="col-md-2">
                  <%= image_tag room.cover_photo(:thumb) %>
                </div>
                <div class="col-md-7">
                  <h4><%= room.listing_name %></h4>
                </div>
                <div class="col-md-3 right">
                  <%= link_to "Update", listing_room_path(room), class: "btn btn-new" %>
                </div>
              </div>
              <hr/>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% else %>
<div class="container text-center">
  <h1>You don't have any listings</h1>
  <a href="/rooms/new" role="button" class="text-babu">
    <i class="fa fa-plus-circle fa-3x"></i>
  </a>
</div>
<% end %>

