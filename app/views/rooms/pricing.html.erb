<div class="container content">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <div class="card d-md-block d-lg-block mb-4">
        <div class="card-body">
          <div class="container">
            <%= render 'room_menu' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card d-md-block d-lg-block mb-4">
        <div class="card-body">
          <div class="container">
            <%= form_for @room do |f| %>

              <div class="row">
                <div class="form-group">
                  <label>Price</label>
                  <%= f.text_field :price, placeholder: "Set your daily price. e.g. 60", class: "form-control", required: true %>
                </div>
              </div>

              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-new" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>




